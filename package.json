{
  "name": "customer-portal-monorepo",
  "description": "Customer Portal Monorepo - Public Site, User Portal, Admin Portal",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:public": "cd public-site && pnpm dev",
    "dev:user": "cd user-portal && pnpm dev",
    "dev:admin": "cd admin-portal && pnpm dev",
    "build:public": "cd public-site && pnpm build",
    "build:user": "cd user-portal && pnpm build",
    "build:admin": "cd admin-portal && pnpm build",
    "lint:user": "cd user-portal && pnpm lint",
    "lint:admin": "cd admin-portal && pnpm lint",
    "lint": "pnpm lint:user && pnpm lint:admin",
    "typecheck:public": "cd public-site && pnpm typecheck",
    "typecheck:user": "cd user-portal && pnpm typecheck",
    "typecheck:admin": "cd admin-portal && pnpm typecheck",
    "typecheck": "pnpm typecheck:public && pnpm typecheck:user && pnpm typecheck:admin",
    "install:all": "cd public-site && pnpm install && cd ../user-portal && pnpm install && cd ../admin-portal && pnpm install"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.11.0+sha512.6540583f41cc5f628eb3d9773ecee802f4f9ef9923cc45b69890fb47991d4b092964694ec3a4f738a420c918a333062c8b925d312f42e4f0c263eb603551f977"
}
